extends layout

block content
    -url= 'http://www.grupoenergy.com/grupoenergy/images/familias'
    #products
        ul.thumbnails
            -each category in categories.rows
                li.span2
                    div.thumbnail(title='#{category.key[1]}', style="height:170px")
                        a.thumbnail(href='/products/#{category.key[0]}')
                            img(src='#{url}/#{category.key[2]}_100x100.jpg')
                            h6!=category.key[1]
